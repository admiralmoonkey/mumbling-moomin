<div class="container-own bg-setting style style4">
  <div class="content opaque-bg">
    <h2 class="centered-text">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => 'form-control', placeholder: "Enter Email", :required => true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control', placeholder: "Enter Password", :required => true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', placeholder: "Enter Password Again", :required => true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => 'btn-lg' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div><!--end content-->
</div><!--end container-->
